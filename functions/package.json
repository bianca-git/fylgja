{
  "name": "fylgja-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Fylgja AI companion",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "jest --detectOpenHandles --verbose",
    "test:performance": "jest --testNamePattern='performance'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf lib coverage",
    "dev": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "precommit": "npm run lint && npm run type-check && npm run test",
    "prepare": "npm run build"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "@google/generative-ai": "^0.24.1",
    "twilio": "^5.7.3",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "crypto": "^1.0.1",
    "uuid": "^11.1.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^3.0.2",
    "rate-limiter-flexible": "^7.1.1",
    "node-cache": "^5.1.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "@types/express": "^5.0.3",
    "@types/cors": "^2.8.15",
    "@types/lodash": "^4.14.200",
    "@types/jest": "^30.0.0",
    "@types/uuid": "^10.0.0",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/bcryptjs": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "prettier": "^3.0.3",
    "rimraf": "^6.0.1",
    "concurrently": "^9.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.3",
    "@types/supertest": "^6.0.3"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.ts"],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": [
    "firebase",
    "cloud-functions",
    "ai",
    "companion",
    "typescript",
    "fylgja"
  ],
  "author": "Fylgja Team",
  "license": "MIT"
}

